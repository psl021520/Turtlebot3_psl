<!--start gazebo  worlds gmapping move_base -->
<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>

  <arg name="configuration_basename" default="turtlebot3_lds_2d.lua"/>
  
  <arg name='first_tb3' default="tb3_0"/>
  <arg name="first_tb3_x_pos" default="0.0"/>
  <arg name="first_tb3_y_pos" default=" 0.0"/>
  <arg name="first_tb3_z_pos" default=" 0.0"/>
  <arg name="first_tb3_yaw"   default=" 0.0"/>

  <!--gazebo-->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find aws_robomaker_small_house_world)/worlds/small_house.world"/> -->
    <arg name="world_name" value="$(find rrt_simulation)/worlds/house.world"/>

    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  <!--spawn robot download robot-->>
  <group ns = "$(arg first_tb3)">
    <param name="robot_description" command="$(find xacro)/xacro $(find rrt_simulation)/urdf/turtlebot3_waffle_pi.urdf.xacro botname:=$(arg first_tb3)" />

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" 
  args="-urdf -model $(arg first_tb3) -x $(arg first_tb3_x_pos) -y $(arg first_tb3_y_pos) -z $(arg first_tb3_z_pos) -Y $(arg first_tb3_yaw) -param robot_description" respawn="false" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" type="string" value="$(arg first_tb3)" />
  </node>
    
  
  <!-- gmapping  -->
  <node pkg="gmapping" type="slam_gmapping" name="turtlebot3_slam_gmapping" output="screen">
    <param name="base_frame" value="$(arg first_tb3)/base_footprint"/>
    <param name="odom_frame" value="$(arg first_tb3)/odom"/>
    <param name="map_frame"  value="$(arg first_tb3)/map"/>
    <rosparam command="load" file="$(find rrt_simulation)/params/gmapping_params.yaml" />
  </node>
  
  <!-- move_base --> 
  <include file="$(find rrt_simulation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="false"/>
    <arg name="cmd_vel_topic" value="/$(arg first_tb3)/cmd_vel"/>
    <arg name="namespace" value="$(arg first_tb3)"/>
  </include>

  <!-- amcl --> 
  <!-- <include file="$(find rrt_simulation)/launch/amcl.launch"/> -->

  </group>

  <!-- show path --> 
  <include file="$(find show_path)/launch/show_path.launch"/>


  <!--tf-->>
  <node pkg="tf" type="static_transform_publisher" name="world_to_$(arg first_tb3)_tf_broadcaster"  args="0 0 0 0 0 0 /map /$(arg first_tb3)/map 20"/>

  <!--rviz-->>
  <node pkg="rviz" type="rviz" name="rviz" required="true"
        args="-d $(find rrt_simulation)/rviz/single_tb3_gmapping.rviz"/>



 </launch>
